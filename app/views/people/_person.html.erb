<%= turbo_frame_tag person do %>
  <div class="d-flex align-items-start align-items-sm-center flex-column flex-sm-row border rounded-3 p-3 mb-3 shadow">
    <div class="mb-1 w-100">
      <p class="mb-0">
        <%= person.firstname %>
        <%= person.lastname %>
      </p>
    </div>
    <div class="d-flex mt-2 mt-sm-0 justify-content-start justify-content-sm-end align-items-start flex-shrink-1">
      <%= link_to 'Show', person_path(person), class: 'btn btn-sm btn-outline-primary me-3' %>
      <%= link_to "Edit", edit_person_path(person), class: 'btn btn-sm btn-outline-warning me-3' %>
      <%= link_to "Delete", person_path(person), class: 'btn btn-sm btn-outline-danger', method: :delete, data: { confirm: 'Are you sure?' } %>
    </div>
  </div>
<% end %>
