<%= form_with model: @person, data: { controller: 'nested-form', nested_form_wrapper_selector_value: '.nested-form-wrapper'} do |form| %>
  <% if person.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(person.errors.count, "error") %> prohibited this person from being saved:</h2>

      <ul>
        <% person.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="d-flex flex-wrap gap-3 rounded-3 p-3 mb-3 bg-light">
    <%# Salutation %>
    <div class="row">
      <div class="col-3 col-sm-2 col-md-2 col-lg-2 col-xl-1">
        <div class="mb-2">
          <%= form.label :salutation, class: "form-label" %>
          <%= form.collection_select :salutation, Person.salutations, :first, :last, { include_blank: true }, class: "form-select" %>
        </div>
      </div>
    </div>
    <%# Name Inputs %>
    <div class="d-flex flex-wrap flex-lg-nowrap gap-3">
      <div class="mb-2 flex-grow-1">
        <%= form.label :firstname, "Firstname (required)", class: "form-label" %>
        <%= form.text_field :firstname, class: "form-control", :required => true %>
      </div>
      <div class="mb-2 flex-grow-1">
        <%= form.label :middlename, class: "form-label" %>
        <%= form.text_field :middlename, class: "form-control" %>
      </div>
      <div class="mb-2 flex-grow-1">
        <%= form.label :lastname, "Lastname (required)", class: "form-label" %>
        <%= form.text_field :lastname, class: "form-control", :required => true %>
      </div>
    </div>
    <%# Birthdate and SSN %>
    <div class="d-flex flex-wrap gap-3">
      <div class="mb-2 flex-grow-1">
        <%= form.label :birthdate, class: "form-label" %>
        <%= form.date_field :birthdate, class: "form-control" %>
      </div>
      <div class="mb-2 flex-grow-1">
        <%= form.label :ssn, class: "form-label" %>
        <%= form.text_field :ssn, class: "form-control", :minlength => 9, :maxlength => 9, :inputmode => 'numeric', :pattern => '\d*' %>
      </div>
    </div>
  </div>
  <%# Email Inputs %>
  <%= render partial: 'emails/email', locals: { form: form }%>
  <%# Phone Inputs %>
  <%= render partial: 'phones/phone', locals: { form: form }%>
  <%# Address Inputs %>
  <%= render partial: 'addresses/address', locals: { form: form } %>
  <%# Comments %>
  <div class="mb-2">
    <%= form.label :comment, class: "form-label" %>
    <%= form.text_area :comment, class: "form-control" %>
  </div>
  <%# SUBMIT %>
  <div class="my-4">
    <%= button_tag "Submit", type: 'submit', class: 'btn btn-primary' %>
  </div>
<% end %>
