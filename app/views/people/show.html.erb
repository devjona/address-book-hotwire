<p id="notice"><%= notice %></p>
<div class="border rounded-3 p-3 mb-3 shadow">
  <div class="mb-4 w-100">
    <h2 class="text-primary">
      <%= @person.firstname %>
      <%= @person.middlename %>
      <%= @person.lastname %>
    </h2>
  </div>
  <div class="d-flex flex-column flex-sm-row ">
    <div class="mb-4 w-100">
      <h3 class="text-secondary">Birthdate</h3>
      <%= @person.birthdate %>
    </div>
    <div class="mb-4 w-100">
      <h3 class="text-secondary">SSN</h3>
      <%= @person.ssn %>
    </div>
  </div>
  <div class="mb-4 100">
    <h3 class="text-secondary">Comments:</h3>
    <p><%= @person.comment %></p>
  </div>
  <div class="mb-4 w-100">
    <h3 class="text-secondary">Phones:</h3>
    <% @person.phones.each do |phone| %>
      <p><%= phone.number %></p>
    <% end %>
  </div>
  <div class="d-flex justify-content-start justify-content-sm-end align-items-start flex-shrink-1">
    <%= link_to "Edit", edit_person_path(@person), class: 'btn btn-outline-warning me-3' %>
    <%= link_to "Delete", person_path(@person), class: 'btn btn-outline-danger', method: :delete, data: { confirm: 'Are you sure?' } %>
  </div>
</div>
