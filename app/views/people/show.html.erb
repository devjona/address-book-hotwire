<p id="notice"><%= notice %></p>
<div class="border rounded-3 p-3 mb-3 shadow">
  <div class="mb-4 w-100 d-flex justify-content-between align-items-end">
    <h2 class="text-primary mb-0">
      <%= @person.firstname %>
      <%= @person.middlename %>
      <%= @person.lastname %>
    </h2>
    <div class="d-flex justify-content-start justify-content-sm-end align-items-start flex-shrink-1 gap-2">
      <%= link_to 'Back', people_path, class: 'btn btn-outline-primary' %>
      <%= link_to "Edit", edit_person_path(@person), class: 'btn btn-outline-warning' %>
      <%= link_to "Delete", person_path(@person), class: 'btn btn-outline-danger', method: :delete, data: { confirm: 'Are you sure?' } %>
    </div>
  </div>
  <div class="d-flex flex-column flex-sm-row gap-3">
    <div class="mb-4 w-100 border border-light bg-light rounded-3 p-3">
      <h3 class="text-secondary">Birthdate</h3>
      <%= @person.birthdate %>
    </div>
    <div class="mb-4 w-100 border border-light bg-light rounded-3 p-3">
      <h3 class="text-secondary">SSN</h3>
      <%= @person.ssn %>
    </div>
  </div>
  <div class="mb-4 w-100 border border-light bg-light rounded-3 p-3">
    <h3 class="text-secondary">Phones:</h3>
    <% @person.phones.each do |phone| %>
      <p><%= phone.number %></p>
      <p><%= phone.comment %></p>
    <% end %>
  </div>
  <div class="mb-4 w-100 border border-light bg-light rounded-3 p-3">
    <h3 class="text-secondary">Emails:</h3>
    <% @person.emails.each do |email| %>
      <p><%= email.address %></p>
      <p><%= email.comment %></p>
    <% end %>
  </div>
  <div class="mb-4 100 border border-light bg-light rounded-3 p-3">
    <h3 class="text-secondary">Comments:</h3>
    <p><%= @person.comment %></p>
  </div>
</div>
